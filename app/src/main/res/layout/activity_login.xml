<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".LoginSingup.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/shopping_img"
            android:layout_marginBottom="15dp"
            android:contentDescription="Login Page Logo" />


        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottiePopup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_rawRes="@raw/progess_bar_line"
            app:lottie_autoPlay="true"
            app:lottie_loop="false"
            android:visibility="gone"/>
        <!-- Welcome Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Welcome Back"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="15dp" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/et_User_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/et_background"
            android:drawableStart="@drawable/ic_email"
            android:autofillHints="username" />





        <!-- Password Input -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/et_background"
                android:drawableStart="@drawable/ic_password"
                android:autofillHints="password" />

            <ImageView
                android:id="@+id/iv_eye"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_eye_close"
                android:padding="10dp"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="10dp"
                android:contentDescription="Show Password Icon" />
        </RelativeLayout>

        <!-- Login Button -->
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Login"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/Primary" />

        <!-- Don't Have an Account -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donâ€™t have an account?"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tv_signUpText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textColor="@color/Primary"
                android:layout_marginStart="4dp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Forgot Password -->
        <TextView
            android:id="@+id/tv_forgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="10dp" />
    </LinearLayout>
</ScrollView>
