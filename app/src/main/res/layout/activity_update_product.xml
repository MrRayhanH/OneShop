<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activitys.UpdateProductActivity"
    android:background="@color/white">

    <!-- Header TextView -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF3131"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Menu"
            android:src="@drawable/ic_back_arrow"
            android:id="@+id/updateProductBackArrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Update Product"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <!-- Product Name field -->
    <EditText
        android:id="@+id/edit_text_product_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="  Product Name"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:background="@drawable/et_background"/>

    <!-- Product Price field -->
    <EditText
        android:id="@+id/edit_text_product_price"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="  Product Price"
        android:inputType="numberDecimal"
        android:layout_below="@id/edit_text_product_name"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:background="@drawable/et_background"/>

    <!-- Product Quantity field -->
    <EditText
        android:id="@+id/edit_text_product_quantity"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="  Product Quantity"
        android:inputType="number"
        android:layout_below="@id/edit_text_product_price"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:background="@drawable/et_background"/>

    <!-- Product ID (non-editable) -->
    <TextView
        android:id="@+id/text_view_product_id"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="  Product ID"
        android:padding="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:enabled="false"
        android:layout_below="@id/edit_text_product_quantity"
        android:layout_marginTop="8dp"
        android:background="@drawable/et_background"/>

    <!-- Product Image View -->
    <ImageView
        android:id="@+id/image_view_product"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:layout_below="@id/text_view_product_id"
        android:layout_marginTop="16dp"
        android:background="@drawable/product"/>

    <!-- Select Image Button -->
    <Button
        android:id="@+id/button_select_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Image"
        android:layout_below="@id/image_view_product"
        android:layout_marginTop="50dp"
        android:backgroundTint="#FF3131"/>
    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Product"
        android:layout_below="@id/button_select_image"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF3131"/>

    <Button
        android:id="@+id/button_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Product"
        android:layout_below="@id/button_search"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF3131"/>
    <!-- Horizontal layout for side-by-side buttons -->


</RelativeLayout>
