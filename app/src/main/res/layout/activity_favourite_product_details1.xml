<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_margin="10dp"
    tools:context=".User.Favourite.FavouriteProductDetails">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/iv_product_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        app:srcCompat="@drawable/product"
        android:layout_alignParentTop="true" />

    <!-- Product Name -->
    <TextView
        android:id="@+id/tv_ProductNameFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:layout_below="@id/iv_product_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <!-- Product Price -->
    <TextView
        android:id="@+id/tv_ProductPriceFav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Price"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:layout_below="@id/tv_ProductNameFav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Product Quantity -->
    <TextView
        android:id="@+id/tv_productQuantityfav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Quantity"
        android:fontFamily="@font/roboto_bold"
        android:textSize="20sp"
        android:layout_below="@id/tv_ProductPriceFav"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:gravity="center"/>

    <!-- Product Description ScrollView -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_productQuantityfav"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/tv_ProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp" />
    </ScrollView>

    <!-- Delete Button -->
    <ImageView
        android:id="@+id/iv_delete"
        android:layout_below="@+id/scrollView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_delete" />

    <!-- Add to Cart Button -->
    <Button
        android:id="@+id/btn_addToCardFav"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/Primary"
        android:fontFamily="@font/roboto_bold"
        android:text="ADD TO CART"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>
